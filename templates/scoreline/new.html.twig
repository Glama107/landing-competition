{% extends 'base.html.twig' %}

{% block title %}New Scoreline{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}
    <div class="bg-gray-50 min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Ajout d'un score</h1>
            {{ form_start(form, {'attr': {'class': 'bg-white rounded-lg shadow-sm p-6'}}) }}
            <div class="form-field mb-6">
                <label for="option" class="block text-sm font-medium text-gray-700 mb-1">Juge</label>
                {{ form_widget(form.judge, {'attr': {'class': "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none"}}) }}
            </div>
            <div class="form-field mb-6">
                <label for="option" class="block text-sm font-medium text-gray-700 mb-1">Compétiteur</label>
                {{ form_widget(form.competitor, {'attr': {'class': "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none"}}) }}
            </div>
            <div class="form-field mb-6">
                <label for="option" class="block text-sm font-medium text-gray-700 mb-1">Appareil</label>
                {{ form_widget(form.aircraft, {'attr': {'class': "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none"}}) }}
            </div>
            <div class="form-field mb-6">
                <label for="option" class="block text-sm font-medium text-gray-700 mb-1">Heure de passage</label>
                {{ form_widget(form.timeOfPassage, {'attr': {'class': "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none"}}) }}
            </div>
            <div class="form-field mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">
                    Note atterrissage libre
                </label>
                {{ form_widget(form.firstnote, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
                <div class="flex items-center mt-2">
                </div>
            </div>
            <div class="form-field mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">
                    Note sans volets
                </label>
                {{ form_widget(form.secondscore, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
                <div class="flex items-center mt-2">
                    {{ form_widget(form.isFlapsUsed, {'attr': {'class': 'rounded text-blue-500 focus:ring-blue-500 focus:ring-1'}}) }}
                    {{ form_label(form.isFlapsUsed, null, {'label_attr': {'class': 'ml-2 text-gray-700 text-sm'}}) }}
                </div>
            </div>
            <div class="form-field mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">
                    Note sans moteur
                </label>
                {{ form_widget(form.thirdnote, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
                <div class="flex items-center mt-2">
                </div>
            </div>
            <div class="form-field mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">
                    Note de rattrapage
                </label>
                {{ form_widget(form.savingnote, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
                <div class="flex items-center mt-2">
                    {{ form_widget(form.isFlapsUsedReplacing, {'attr': {'class': 'rounded text-blue-500 focus:ring-blue-500 focus:ring-1'}}) }}
                    {{ form_label(form.isFlapsUsedReplacing, null, {'label_attr': {'class': 'ml-2 text-gray-700 text-sm'}}) }}
                </div>
            </div>
            <div class="form-field mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">Note à rattraper</label>
                {{ form_widget(form.replacingnote, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
            </div>
            <div class="form-field mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">Commentaires</label>
                {{ form_widget(form.comments, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500 focus:border-blue-500 outline-none'}}) }}
            </div>
            <!-- Bouton Soumettre -->
            <button
                    type="submit"
                    class="submit-btn w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition">
                Créer
            </button>
            {{ form_end(form) }}
        </div>
    </div>
    {{ include('footer.html.twig') }}

{% endblock %}
