<table class="w-full">
    <thead class="bg-gray-100">
    <tr>
        <th class="px-4 md:px-6 py-3 text-left">ID</th>
        <th class="px-4 md:px-6 py-3 text-left">Nom</th>
    </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
    {% for judge in judges %}
    <tr class="hover:bg-gray-50 transition">
        <td class="px-4 md:px-6 py-4">{{ judge.id }}</td>
        <td class="px-4 md:px-6 py-4 font-medium">{{ judge.name | capitalize }}</td>
        <td class="px-4 md:px-6 py-4 text-right">
            <a href="{{ path('app_judge_edit', {'id': judge.id}) }}" class="action-icon edit-icon" title="Modifier">
                <i class="fas fa-edit"></i>
            </a>
            <form class="contents" method="post" action="{{ path('app_judge_delete', {'id': judge.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ judge.id) }}">
                <button class="action-icon delete-icon" title="Supprimer">
                    <i class="fas fa-trash"></i>
                </button>
            </form>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>